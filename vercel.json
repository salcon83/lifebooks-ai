{
  "version": 2,
  "builds": [
    {
      "src": "lifebooks-backend/src/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "lifebooks-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "lifebooks-backend/src/main.py",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "lifebooks-frontend/build/$1"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  }
}

